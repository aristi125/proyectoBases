      </HBox>
      <DatePicker fx:id="dateHoraInicio" layoutX="128.0" layoutY="186.0" />
      <DatePicker fx:id="dateHoraFinal" layoutX="128.0" layoutY="232.0" />
      <Label layoutX="28.0" layoutY="190.0" text="Hora de Inicio:" />
